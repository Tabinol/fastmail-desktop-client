{
  "name": "fastmail-desktop-client",
  "version": "1.0.1",
  "description": "Unofficial desktop client for Fastmail",
  "main": "./out/main.js",
  "scripts": {
    "build": "tsc --build ./src/tsconfig.json",
    "clean": "tsc --build --clean ./src/tsconfig.json",
    "start": "tsc --build ./src/tsconfig.json && electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "tsc --build ./src/tsconfig.json && electron-builder --dir",
    "dist": "tsc --build ./src/tsconfig.json && electron-builder",
    "release": "tsc --build ./src/tsconfig.json && electron-builder"
  },
  "build": {
    "appId": "me.tabinol.fastmail-desktop-client",
    "productName": "Fastmail Desktop Client",
    "icon": "icon.png",
    "publish": [
      "github"
    ],
    "linux": {
      "target": "AppImage",
      "category": "X-Calendar;X-Compose;X-Contacts;X-Mail;Network"
    }
  },
  "repository": "https://github.com/Tabinol/fastmail-desktop-client.git",
  "author": "Tabinol",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Tabinol/fastmail-desktop-client/issues"
  },
  "homepage": "https://github.com/Tabinol/fastmail-desktop-client",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  }
}
