{
  "name": "fastmail-desktop-client",
  "version": "1.0.2",
  "description": "Unofficial desktop client for Fastmail",
  "main": "app/main.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && electron .",
    "test": "tsc && jest",
    "pack": "tsc && electron-builder --dir",
    "dist": "tsc && electron-builder --publish never",
    "flatpak-install": "./flatpak/flatpak-build.sh",
    "flatpak-start": "flatpak run me.tabinol.fastmail-desktop-client",
    "flatpak-dist": "./flatpak/flatpak-dist.sh"
  },
  "build": {
    "appId": "me.tabinol.fastmail-desktop-client",
    "icon": "icon.png",
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "category": "X-Calendar;X-Compose;X-Contacts;X-Mail;Network",
      "desktop": {
        "Name": "Fastmail Desktop Client"
      }
    },
    "files": [
      "**/*",
      "!.circleci/**",
      "!.vscode/**",
      "!.nvmrc",
      "!tests/**",
      "!app/**/*.js.map",
      "!app/**/*.ts",
      "!flatpak/**",
      "!reports/**",
      "!md/**",
      "!babel.config.json",
      "!jest.config.json"
    ]
  },
  "repository": "https://github.com/Tabinol/fastmail-desktop-client.git",
  "author": "Tabinol <tabinol@tabinol.me> (https://www.tabinol.me)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Tabinol/fastmail-desktop-client/issues"
  },
  "homepage": "https://github.com/Tabinol/fastmail-desktop-client",
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-typescript": "^7.23.3",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "babel-jest": "^29.7.0",
    "electron": "^v28.1.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
